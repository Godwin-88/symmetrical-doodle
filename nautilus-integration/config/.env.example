# NautilusTrader Integration Configuration
# Copy this file to .env and customize for your environment

# Environment Configuration
NAUTILUS_INTEGRATION_ENV=development
NAUTILUS_DEBUG=true

# Database Configuration
NAUTILUS_DATABASE__POSTGRES_URL=postgresql://postgres:password@localhost:5432/trading_system
NAUTILUS_DATABASE__NEO4J_URL=bolt://localhost:7687
NAUTILUS_DATABASE__NEO4J_USER=neo4j
NAUTILUS_DATABASE__NEO4J_PASSWORD=password
NAUTILUS_DATABASE__REDIS_URL=redis://localhost:6379

# API Configuration
NAUTILUS_API_HOST=0.0.0.0
NAUTILUS_API_PORT=8002
NAUTILUS_API_WORKERS=1

# NautilusTrader Engine Configuration
NAUTILUS_NAUTILUS_ENGINE__BACKTEST_ENGINE_ID=BACKTEST
NAUTILUS_NAUTILUS_ENGINE__BACKTEST_LOG_LEVEL=INFO
NAUTILUS_NAUTILUS_ENGINE__BACKTEST_CACHE_DATABASE=true
NAUTILUS_NAUTILUS_ENGINE__BACKTEST_CACHE_DATABASE_FLUSH=false

NAUTILUS_NAUTILUS_ENGINE__TRADING_NODE_ID=LIVE
NAUTILUS_NAUTILUS_ENGINE__TRADING_LOG_LEVEL=INFO
NAUTILUS_NAUTILUS_ENGINE__TRADING_CACHE_DATABASE=true

NAUTILUS_NAUTILUS_ENGINE__DATA_CATALOG_PATH=./data/catalog
NAUTILUS_NAUTILUS_ENGINE__PARQUET_COMPRESSION=snappy

# Integration Configuration
NAUTILUS_INTEGRATION__STRATEGY_TRANSLATION_ENABLED=true
NAUTILUS_INTEGRATION__STRATEGY_VALIDATION_ENABLED=true
NAUTILUS_INTEGRATION__STRATEGY_HOT_SWAP_ENABLED=true

NAUTILUS_INTEGRATION__SIGNAL_ROUTING_ENABLED=true
NAUTILUS_INTEGRATION__SIGNAL_BUFFER_SIZE=10000
NAUTILUS_INTEGRATION__SIGNAL_DELIVERY_TIMEOUT=1.0

NAUTILUS_INTEGRATION__RISK_INTEGRATION_ENABLED=true
NAUTILUS_INTEGRATION__POSITION_SYNC_INTERVAL=1.0

NAUTILUS_INTEGRATION__PERFORMANCE_MONITORING_ENABLED=true
NAUTILUS_INTEGRATION__METRICS_COLLECTION_INTERVAL=5.0

# Error Handling Configuration
NAUTILUS_ERROR_HANDLING__MAX_RETRIES=3
NAUTILUS_ERROR_HANDLING__RETRY_BACKOFF_FACTOR=2.0
NAUTILUS_ERROR_HANDLING__RETRY_MAX_DELAY=60.0

NAUTILUS_ERROR_HANDLING__CIRCUIT_BREAKER_ENABLED=true
NAUTILUS_ERROR_HANDLING__CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
NAUTILUS_ERROR_HANDLING__CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30.0

NAUTILUS_ERROR_HANDLING__GRACEFUL_DEGRADATION_ENABLED=true
NAUTILUS_ERROR_HANDLING__FALLBACK_TO_LEGACY_ENGINE=true

# Logging Configuration
NAUTILUS_LOGGING__LEVEL=INFO
NAUTILUS_LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
NAUTILUS_LOGGING__CORRELATION_ID_ENABLED=true
NAUTILUS_LOGGING__STRUCTURED_LOGGING=true
NAUTILUS_LOGGING__LOG_FILE_PATH=./data/logs/nautilus-integration.log
NAUTILUS_LOGGING__LOG_ROTATION_ENABLED=true
NAUTILUS_LOGGING__LOG_MAX_SIZE=100MB
NAUTILUS_LOGGING__LOG_BACKUP_COUNT=5

# Health Check Configuration
NAUTILUS_HEALTH_CHECK_ENABLED=true
NAUTILUS_HEALTH_CHECK_INTERVAL=30.0

# Docker Compose Configuration
NAUTILUS_DATA_CATALOG_PATH=./data/catalog
NAUTILUS_CONFIG_PATH=./config
NAUTILUS_LOGS_PATH=./data/logs

# Database Service Configuration (for docker-compose)
POSTGRES_DB=trading_system
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

REDIS_PORT=6379

# Monitoring Configuration (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin