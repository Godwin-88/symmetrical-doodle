# Docker Environment Configuration Template
# Copy this file to .env and customize for your deployment

# Environment
KNOWLEDGE_INGESTION_ENV=production

# Supabase Configuration (REQUIRED)
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# OpenAI Configuration (REQUIRED for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration (OPTIONAL, for alternative embedding models)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Logging Configuration
LOG_LEVEL=INFO

# Volume Paths (customize these paths for your system)
# Credentials directory - MUST contain Google Drive service account JSON
CREDENTIALS_PATH=./credentials

# Configuration directory - OPTIONAL, for custom config overrides
CONFIG_PATH=./config

# Data directories
EXTRACTED_PDFS_PATH=./data/extracted_pdfs
LOGS_PATH=./data/logs

# Resource Limits (adjust based on your system)
MEMORY_LIMIT=4G
CPU_LIMIT=2.0
MEMORY_RESERVATION=1G
CPU_RESERVATION=0.5

# Optional: Redis Configuration (uncomment if using caching)
# REDIS_URL=redis://redis:6379/0
# REDIS_PASSWORD=your_redis_password_here